        const quizContainer = document.getElementById('quiz-container');
        const submitQuizBtn = document.getElementById('submit-quiz-btn');
        const quizResultsDiv = document.getElementById('quiz-results');
        
        function loadQuiz() {
            if (!quizContainer) return;
            quizContainer.innerHTML = ''; // Clear previous quiz if any
            quizData.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.classList.add('mb-8');
                let optionsHTML = '';
                q.options.forEach(option => {
                    optionsHTML += `
                        <label class="block quiz-option p-4 rounded-lg mb-3 cursor-pointer text-sm hover:shadow-md">
                            <input type="radio" name="question${index}" value="${option}" class="mr-3 opacity-0 absolute h-0 w-0">
                            <span class="option-text">${option}</span>
                        </label>
                    `;
                });
                questionDiv.innerHTML = `
                    <p class="font-semibold mb-4 text-lg text-[#37474F]">${q.question}</p>
                    <div id="options${index}" class="space-y-2">${optionsHTML}</div>
                `;
                quizContainer.appendChild(questionDiv);

                const optionLabels = questionDiv.querySelectorAll('.quiz-option');
                optionLabels.forEach(label => {
                    label.addEventListener('click', () => {
                        questionDiv.querySelectorAll('.quiz-option').forEach(opt => opt.classList.remove('selected'));
                        label.classList.add('selected');
                        label.querySelector('input').checked = true;
                    });
                });
            });
            submitQuizBtn.textContent = '提交答案';
            submitQuizBtn.onclick = handleSubmitQuiz; // Use onclick for simplicity here or manage listeners carefully
            quizResultsDiv.innerHTML = '';
        }
        
        function handleSubmitQuiz() {
            let score = 0;
            quizData.forEach((q, index) => {
                const selectedOptionInput = quizContainer.querySelector(`input[name="question${index}"]:checked`);
                const optionsForQuestion = quizContainer.querySelectorAll(`#options${index} .quiz-option`);

                optionsForQuestion.forEach(label => {
                    label.classList.remove('correct', 'incorrect', 'selected');
                    const radio = label.querySelector('input');
                    if (radio.value === q.answer) {
                        label.classList.add('correct');
                    }
                });
                
                if (selectedOptionInput) {
                    const parentLabel = selectedOptionInput.closest('.quiz-option');
                    if (selectedOptionInput.value === q.answer) {
                        score++;
                    } else {
                        parentLabel.classList.add('incorrect');
                    }
                }
            });
            quizResultsDiv.innerHTML = `你答對了 ${score} / ${quizData.length} 題！${score === quizData.length ? '太棒了！🥳' : (score >= quizData.length / 2 ? '不錯喔！👍' : '再接再厲！💪')}`;
            quizResultsDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            submitQuizBtn.textContent = '重新測驗';
            submitQuizBtn.onclick = loadQuiz; // Change to reset
        }

        // Active navigation link highlighting on scroll
        const sections = document.querySelectorAll('.content-section');
        const mainNavLinks = document.querySelectorAll('nav .nav-link');

        window.addEventListener('scroll', () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= sectionTop - 100) { // Adjusted offset
                    current = section.getAttribute('id');
                }
            });

            mainNavLinks.forEach(link => {
                link.classList.remove('active');
                const href = link.getAttribute('href');
                if (href && href.substring(1) === current) {
                    link.classList.add('active');
                }
            });
             // Special case for hero section if no other section is active
            if (current === '' && sections.length > 0 && pageYOffset < sections[0].offsetTop - 100) {
                 mainNavLinks.forEach(link => {
                    const href = link.getAttribute('href');
                    if (href && href === '#intro') {
                        link.classList.add('active');
                    }
                });
            }
        });

        // Load initial quiz
        if (quizContainer) { // Ensure quizContainer exists before loading
             loadQuiz();
        }

    </script>
