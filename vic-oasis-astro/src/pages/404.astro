---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - 頁面未找到">
  <main class="flex min-h-screen flex-col items-center justify-center p-4">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">404</h1>
    <p class="text-xl text-gray-600 mb-8">抱歉，找不到您要的頁面</p>
    <a href="/" class="text-[#E57373] hover:text-[#81C7D4] transition-colors">
      返回首頁
    </a>
  </main>
</BaseLayout> 